generator client {
  provider = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
  schemas  = ["reviews"]
}

model Review {
  id            String   @id @default(uuid())
  reviewer_id   String
  reviewee_id   String
  job_id        String
  contract_id   String
  rating        Int
  comment       String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("reviews")
  @@schema("reviews")
}
