generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
  binaryTargets   = ["native", "linux-musl"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["reviews"]
}

enum ReviewStatus {
  PENDING
  RELEASED

  @@schema("reviews")
}

model Review {
  id            String   @id @default(uuid())
  reviewer_id   String
  reviewee_id   String
  job_id        String
  contract_id   String
  ratingOverall Int      @default(0)
  ratingCommunication Int @default(0)
  ratingQuality       Int @default(0)
  ratingValue         Int @default(0)
  ratingSchedule      Int @default(0)
  privateRating       Int @default(0)
  recommendToOthers   Boolean @default(true)
  contractValue       Decimal @default(0.0)
  comment       String?
  reply         String?
  repliedAt     DateTime?
  status        ReviewStatus @default(PENDING)
  revealedAt    DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("reviews")
  @@schema("reviews")
}
