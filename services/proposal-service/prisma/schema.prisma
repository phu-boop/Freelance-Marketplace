generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
  binaryTargets   = ["native", "linux-musl"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["proposals", "sync"]
}

model Proposal {
  id          String   @id @default(uuid())
  job_id      String   // Job ID from Job Service
  freelancer_id String // User ID from User Service
  coverLetter String
  bidAmount   Decimal
  status      String   @default("PENDING") // PENDING, ACCEPTED, REJECTED, WITHDRAWN
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Advanced fields
  isShortlisted Boolean @default(false)
  attachments   String[] // URLs to files
  estimatedDuration String?
  
  // Negotiation
  counterOfferAmount Decimal?
  counterOfferTerms  String?

  @@unique([job_id, freelancer_id])
  @@schema("proposals")
}
model SyncTombstone {
  id        String   @id @default(uuid())
  entity    String   // e.g., "Proposal"
  recordId  String
  deletedAt DateTime @default(now())
  
  @@index([deletedAt])
  @@map("sync_tombstones")
  @@schema("sync")
}
