generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
  binaryTargets   = ["native", "linux-musl"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["jobs", "users", "sync"]
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String?  // Nullable if using only social login, but usually needed
  googleId  String?  @unique
  linkedinId String? @unique
  firstName String?
  lastName  String?
  avatarUrl String?
  coverImageUrl String?
  phone     String?
  address   String?
  country   String?
  timezone  String?  @default("UTC")
  language  String?  @default("en")
  roles     String[] @default(["FREELANCER"]) // FREELANCER, CLIENT, ADMIN
  status    String   @default("ACTIVE") // ACTIVE, SUSPENDED, BANNED
  banReason String?
  banExpiresAt DateTime?
  isAvailable Boolean @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Profile fields
  title       String?  // Professional Title
  overview    String?  // Detailed Bio
  hourlyRate  Decimal?
  skills      String[]
  primaryCategoryId String?
  completionPercentage Int @default(0)
  availableConnects Int @default(50)
  // profile Profile? @relation("UserProfile") // Remove relations not used in job-service

  // Client fields
  companyName       String?
  companyLogo       String?
  companySize       String?
  industry          String?
  website           String?
  isPaymentVerified Boolean @default(false)
  
  // KYC
  kycStatus   String   @default("PENDING") // PENDING, VERIFIED, REJECTED
  idDocument  String?  // URL to ID document
  isIdentityVerified Boolean @default(false)
  
  // Security
  twoFactorEnabled Boolean @default(false)
  twoFactorSecret  String?
  resetPasswordToken String?
  resetPasswordExpiresAt DateTime?
  facebookId             String?                @unique
  githubId               String?                @unique
  keycloakId             String?                @unique
  languages              Json?
  isEmailVerified        Boolean                @default(false)
  taxId                  String?
  billingAddress         String?

  // Notifications
  emailNotifications Boolean @default(true)
  pushNotifications  Boolean @default(true)
  inAppNotifications Boolean @default(true)

  // Reputation
  rating          Decimal  @default(0.0)
  reviewCount     Int      @default(0)
  jobSuccessScore Int      @default(100)
  trustScore      Int      @default(100)
  badges          String[]
  isPromoted      Boolean  @default(false)
  promotionExpiresAt DateTime?

  isCloudMember          Boolean                @default(false)
  hasCloudOwnership      Boolean                @default(false)
  
  referralCode           String?                @unique
  taxIdType              String?                // SSN, EIN, VAT
  taxVerifiedStatus      String                 @default("UNVERIFIED")
  taxFormType            String?                // W8BEN, W9
  taxSignatureName       String?
  taxSignatureDate       DateTime?
  taxSignatureIp         String?

  kycMethod              String?                // DOCUMENT, VIDEO
  documentData           Json?                  // Extracted OCR data
  videoInterviewAt       DateTime?
  videoInterviewLink     String?

  backgroundCheckStatus      String                 @default("UNSTARTED")
  backgroundCheckId          String?
  backgroundCheckUrl         String?
  backgroundCheckVerifiedAt  DateTime?

  githubUsername         String?
  behanceUsername        String?
  dribbbleUsername       String?
  portfolioSyncEnabled   Boolean                @default(false)
  lastPortfolioSync      DateTime?

  communicationStyle     String?
  avgResponseTime        Float?
  reliabilityScore       Float                  @default(100)
  metadata               Json?

  subscriptionTier       String                 @default("BASIC")
  subscriptionStatus     String                 @default("ACTIVE")
  subscriptionEndsAt     DateTime?

  @@map("users")
  @@schema("users")
}

model Job {
  id          String   @id @default(uuid())
  title       String
  description String
  budget      Decimal?
  client_id   String   // User ID from User Service
  teamId      String?  // Organization/Team ID from User Service
  status      String   @default("PENDING_APPROVAL") // PENDING_APPROVAL, OPEN, IN_PROGRESS, COMPLETED, CLOSED, REJECTED
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  categoryId  String?
  category    Category? @relation(fields: [categoryId], references: [id])
  skills      JobSkill[]
  
  // Advanced fields
  type        String   @default("FIXED_PRICE") // FIXED_PRICE, HOURLY
  experienceLevel String @default("ENTRY") // ENTRY, MID, EXPERT
  locationType    String @default("REMOTE") // REMOTE, ONSITE, HYBRID
  location        String?
  attachments String[] // URLs to files
  duration    String?
  expiresAt   DateTime?
  isPromoted  Boolean  @default(false)
  isTrending  Boolean  @default(false)
  promotionExpiresAt DateTime?
  closeReason String?
  preferredCommunicationStyle String? // e.g. "Proactive", "Formal", "Concise"

  savedBy     SavedJob[]
  invitations JobInvitation[]
  proposals   Proposal[]
  interviews  Interview[]

  @@schema("jobs")
}

model Proposal {
  id              String   @id @default(uuid())
  jobId           String
  job             Job      @relation(fields: [jobId], references: [id])
  freelancerId    String   // User ID from User Service
  coverLetter     String
  bidAmount       Decimal?
  timeline        String?  // e.g. "3 days", "1 week"
  attachments     String[] // URLs to files
  portfolioItemIds String[] // IDs of items from user-service
  status          String   @default("PENDING") // PENDING, SHORTLISTED, REJECTED, WITHDRAWN, OFFERED, HIRED, NEGOTIATION, TERMINATED
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  progress        Int      @default(0)
  aiScore         Int?
  aiAnalysis      String?
  
  // Extension Request
  extensionRequestDate   DateTime?
  extensionRequestReason String?
  extensionRequestStatus String? // PENDING, APPROVED, REJECTED
  autoReleaseDays Int @default(14)

  milestones      Milestone[]
  timesheets      Timesheet[]

  @@schema("jobs")
}

model Milestone {
  id          String   @id @default(uuid())
  proposalId  String
  proposal    Proposal @relation(fields: [proposalId], references: [id])
  description String
  amount      Decimal
  dueDate     DateTime?
  autoReleaseDate DateTime?
  status      String   @default("PENDING") // PENDING, SUBMITTED, COMPLETED, PAID, CHANGES_REQUESTED
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  submissions Submission[]

  @@schema("jobs")
}

model Timesheet {
  id          String      @id @default(uuid())
  proposalId  String
  proposal    Proposal    @relation(fields: [proposalId], references: [id])
  startDate   DateTime    // Start of the week (Monday)
  endDate     DateTime    // End of the week (Sunday)
  status      String      @default("DRAFT") // DRAFT, SUBMITTED, APPROVED, REJECTED
  totalHours  Decimal     @default(0.0)
  entries     TimeEntry[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@unique([proposalId, startDate])
  @@schema("jobs")
}

model TimeEntry {
  id          String    @id @default(uuid())
  timesheetId String
  timesheet   Timesheet @relation(fields: [timesheetId], references: [id])
  date        DateTime
  hours       Decimal
  description String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@schema("jobs")
}

model Submission {
  id          String   @id @default(uuid())
  milestoneId String
  milestone   Milestone @relation(fields: [milestoneId], references: [id])
  freelancerId String
  content     String
  attachments String[]
  status      String   @default("PENDING") // PENDING, APPROVED, REJECTED
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@schema("jobs")
}

model JobInvitation {
  id           String   @id @default(uuid())
  jobId        String
  job          Job      @relation(fields: [jobId], references: [id])
  freelancerId String   // User ID from User Service
  clientId     String   // User ID from User Service
  message      String?
  status       String   @default("PENDING") // PENDING, ACCEPTED, DECLINED
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@schema("jobs")
}

model ServicePackage {
  id          String   @id @default(uuid())
  freelancerId String
  title       String
  description String
  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id])
  
  // Packages (Bronze, Silver, Gold)
  bronzePrice Decimal
  bronzeDeliveryTime Int // in days
  bronzeDeliverables String[]
  
  silverPrice Decimal?
  silverDeliveryTime Int?
  silverDeliverables String[]
  
  goldPrice Decimal?
  goldDeliveryTime Int?
  goldDeliverables String[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@schema("jobs")
}

model Category {
  id    String @id @default(uuid())
  name  String @unique
  slug  String @unique
  jobs  Job[]
  servicePackages ServicePackage[]
  
  parentId String?
  parent   Category? @relation("CategoryHierarchy", fields: [parentId], references: [id])
  children Category[] @relation("CategoryHierarchy")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@schema("jobs")
}

model Skill {
  id    String @id @default(uuid())
  name  String @unique
  jobs  JobSkill[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@schema("jobs")
}

model JobSkill {
  jobId   String
  skillId String
  job     Job   @relation(fields: [jobId], references: [id])
  skill   Skill @relation(fields: [skillId], references: [id])

  @@id([jobId, skillId])
  @@schema("jobs")
}

model SavedJob {
  id        String   @id @default(uuid())
  userId    String
  jobId     String
  job       Job      @relation(fields: [jobId], references: [id])
  createdAt DateTime @default(now())

  @@unique([userId, jobId])
  @@schema("jobs")
}

model JobAlert {
  id          String   @id @default(uuid())
  userId      String
  keyword     String?
  categoryId  String?
  minBudget   Decimal?
  maxBudget   Decimal?
  experienceLevel String?
  locationType    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@schema("jobs")
}

model Interview {
  id           String   @id @default(uuid())
  jobId        String
  job          Job      @relation(fields: [jobId], references: [id])
  freelancerId String
  scheduledAt  DateTime
  status       String   @default("SCHEDULED") // SCHEDULED, COMPLETED, CANCELLED
  meetingUrl   String?
  notes        String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@schema("jobs")
}
model SyncTombstone {
  id        String   @id @default(uuid())
  entity    String   // e.g., "Job", "Category"
  recordId  String
  userId    String?  // Optional: associated user
  deletedAt DateTime @default(now())
  
  @@index([entity, deletedAt, userId])
  @@map("sync_tombstones")
  @@schema("sync")
}
