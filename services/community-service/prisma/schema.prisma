generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
  binaryTargets   = ["native", "linux-musl"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["community"]
}

model ForumCategory {
  id          String      @id @default(uuid())
  name        String      @unique
  slug        String      @unique
  description String?
  posts       ForumPost[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@map("forum_categories")
  @@schema("community")
}

model ForumPost {
  id          String         @id @default(uuid())
  title       String
  content     String
  authorId    String         // User ID from user-service
  categoryId  String
  category    ForumCategory  @relation(fields: [categoryId], references: [id])
  tags        String[]
  comments    ForumComment[]
  votes       ForumVote[]
  upvotes     Int            @default(0)
  downvotes   Int            @default(0)
  viewCount   Int            @default(0)
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  @@map("forum_posts")
  @@schema("community")
}

model ForumComment {
  id        String   @id @default(uuid())
  content   String
  authorId  String   // User ID from user-service
  postId    String
  post      ForumPost @relation(fields: [postId], references: [id], onDelete: Cascade)
  parentId  String?  // For threaded comments
  parent    ForumComment? @relation("CommentToComment", fields: [parentId], references: [id])
  replies   ForumComment[] @relation("CommentToComment")
  votes     ForumVote[]
  upvotes     Int            @default(0)
  downvotes   Int            @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("forum_comments")
  @@schema("community")
}

model ForumVote {
  id        String        @id @default(uuid())
  userId    String
  postId    String?
  post      ForumPost?    @relation(fields: [postId], references: [id], onDelete: Cascade)
  commentId String?
  comment   ForumComment? @relation(fields: [commentId], references: [id], onDelete: Cascade)
  value     Int           // 1 for upvote, -1 for downvote

  @@unique([userId, postId])
  @@unique([userId, commentId])
  @@map("forum_votes")
  @@schema("community")
}

model HelpArticle {
  id        String   @id @default(uuid())
  title     String
  slug      String   @unique
  content   String
  category  String
  keywords  String[]
  isPublic  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("help_articles")
  @@schema("community")
}

model SupportTicket {
  id          String   @id @default(uuid())
  userId      String   // User ID from user-service
  subject     String
  description String
  status      String   @default("OPEN") // OPEN, IN_PROGRESS, RESOLVED, CLOSED
  priority    String   @default("NORMAL") // LOW, NORMAL, HIGH, URGENT
  metadata    Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("support_tickets")
  @@schema("community")
}

model Course {
  id              String          @id @default(uuid())
  title           String
  description     String
  thumbnail       String?
  badgeName       String? // The badge awarded upon completion
  lessons         Lesson[]
  certifications  Certification[]
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  @@map("academy_courses")
  @@schema("community")
}

model Lesson {
  id        String   @id @default(uuid())
  courseId  String
  course    Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  title     String
  content   String
  order     Int
  duration  Int      // in minutes
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("academy_lessons")
  @@schema("community")
}

model Certification {
  id        String   @id @default(uuid())
  userId    String   // User ID from user-service
  courseId  String
  course    Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  issuedAt  DateTime @default(now())
  metadata  Json?

  @@unique([userId, courseId])
  @@map("academy_certifications")
  @@schema("community")
}
