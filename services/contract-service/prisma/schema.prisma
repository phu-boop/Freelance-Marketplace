generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
  schemas  = ["contracts"]
}

model Contract {
  id            String   @id @default(uuid())
  job_id        String   // Job ID from Job Service
  freelancer_id String   // User ID from User Service
  client_id     String   // User ID from User Service
  proposal_id   String   // Proposal ID from Proposal Service
  totalAmount   Decimal
  status        String   @default("ACTIVE") // ACTIVE, COMPLETED, TERMINATED, DISPUTED
  startDate     DateTime @default(now())
  endDate       DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Dispute
  disputeStatus String?  // OPEN, RESOLVED
  disputeReason String?

  // Relations
  milestones    Milestone[]

  @@schema("contracts")
}

model Milestone {
  id          String   @id @default(uuid())
  description String
  amount      Decimal
  status      String   @default("PENDING") // PENDING, ACTIVE, COMPLETED
  dueDate     DateTime?
  contractId  String
  contract    Contract @relation(fields: [contractId], references: [id])
  
  @@schema("contracts")
}
